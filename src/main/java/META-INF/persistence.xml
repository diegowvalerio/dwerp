<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="dwerp" transaction-type="RESOURCE_LOCAL">
	
		<class>br.com.dwerp.entidade.Cliente</class>
		<class>br.com.dwerp.entidade.Cidade</class>
		<class>br.com.dwerp.entidade.Estado</class>
		<class>br.com.dwerp.entidade.Usuario</class>
		<class>br.com.dwerp.entidade.CondPgto</class>
		<class>br.com.dwerp.entidade.FormaPag</class>
		<class>br.com.dwerp.entidade.Fornecedor</class>
		<class>br.com.dwerp.entidade.CentroConsumo</class>
	
		<properties>
			
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/dwerp" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
      		
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
